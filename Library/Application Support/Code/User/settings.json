{
  "editor.bracketPairColorization.enabled": true,
  "editor.wrappingIndent": "same",
  "breadcrumbs.enabled": true,
  "editor.fontLigatures": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "editor.suggestSelection": "first",
  "workbench.editor.revealIfOpen": true,
  "files.insertFinalNewline": true,
  "editor.fontFamily": "Hack Nerd Font",
  "editor.accessibilitySupport": "off",
  "editor.tabSize": 2,
  "errorLens.enabled": false,
  "editor.fontWeight": "500",
  "emmet.showSuggestionsAsSnippets": true,
  "workbench.startupEditor": "newUntitledFile",
  "editor.dragAndDrop": false,
  "indentRainbow.colors": [
    "rgba(16,16,16,0.1)",
    "rgba(16,16,16,0.3)",
    "rgba(16,16,16,0.6)",
    "rgba(16,16,16,0.4)",
    "rgba(16,16,16,0.2)"
  ],
  "emmet.triggerExpansionOnTab": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "errorLens.excludeBySource": ["cSpell"],
  "terminal.integrated.defaultProfile.osx": "zsh",
  "editor.inlineSuggest.enabled": true,
  // https://stackoverflow.com/questions/45916181/vs-code-how-to-keep-two-projects-open-in-tabs-instead-of-two-windows/71657525#71657525
  "window.nativeTabs": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.minimap.enabled": false,
  "editor.formatOnPaste": false,
  "search.exclude": {
    "/venv": true,
    "/bower_components": true,
    "yarn.lock": true,
    "/.next": true,
    "/node_modules": true,
    "/env": true
  },
  "editor.formatOnSave": true,
  "gruvboxMaterial.darkContrast": "hard",
  "errorLens.delay": 2000,
  "eslint.format.enable": true,
  "files.watcherExclude": {
    "/venv/": true,
    "/.next": true,
    "/.git/subtree-cache/": true,
    "env-*": true,
    "/node_modules/": true,
    "yarn.lock": true,
    "/.git/objects/": true,
    "/env/": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.trimTrailingWhitespace": true,
  "vsicons.dontShowNewVersionMessage": true,
  "typescript.suggest.paths": false,
  "workbench.iconTheme": "vscode-icons",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.ignoreRecommendations": true,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#8b4513",
    "editorBracketHighlight.foreground2": "#228b22",
    "editorBracketHighlight.foreground3": "#cc7722",
    "sideBar.background": "#181717",
    "activityBar.background": "#ff0000"
  },
  "http.systemCertificates": false,
  "explorer.confirmDelete": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "explorer.confirmDragAndDrop": false,
  "editor.renderWhitespace": "all",
  "editor.cursorStyle": "block",
  "diffEditor.codeLens": true,
  "editor.linkedEditing": true,
  "git.autofetch": true,
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "svgPreview.autoOpen": false,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "presentationMode.zoomLevel": 4,
  "workbench.colorTheme": "Gruvbox Material Dark",
  "editor.autoClosingBrackets": "never",
  "editor.cursorSurroundingLines": 20,
  "workbench.activityBar.location": "top",
  "inlineChat.mode": "live",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "zenMode.hideLineNumbers": false,
  "window.customTitleBarVisibility": "never",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.foldingImportsByDefault": true,
  // ============= UI =============
  // Window
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 1,
  // =========== GitHub ===========
  // Git
  "git.enableSmartCommit": true,
  "git.mergeEditor": true,
  // Git Lens
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  // GitHub Pull Requests
  // "githubPullRequests.pullBranch": "never",
  // "githubPullRequests.commentExpandState": "collapseAll",
  // Copilot
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  // ============ Misc ============
  // Todo Tree
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE"
  ],
  // Project Manager
  "projectManager.git.baseFolders": ["$home/workspace"],
  "projectManager.sortList": "Recent",
  // background
  "background.editorBackgrounds": [],
  "background.windowBackgrounds": [
    "/Users/anthonymontaigne/Pictures/V Rising Gothic Vampire Girl Throne.jpg",
    "Users/anthonymontaigne/Pictures/vrising.jpg"
  ],
  "background.autoInstall": false,
  "background.backgroundOpacity": [0.95, 0.9, 0.9, 0.9],
  // vim
  // "vim.highlightedyank.enable": true,
  // "vim.sneak": true,
  // "vim.leader": "space",
  // "vim.cursorStylePerMode.insert": "line-thin",
  // "vim.cursorStylePerMode.normal": "block",
  // "vim.smartRelativeLine": true,
  // "vim.statusBarColorControl": false,
  // cSpell
  "cSpell.language": "en,fr",
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "*.filter"
  ],
  "cSpell.userWords": [
    "algo",
    "behaviour",
    "bodyparser",
    "browserslist",
    "deduping",
    "dotfiles",
    "fadeinout",
    "fiability",
    "formik",
    "fuzznimp",
    "gruvbox",
    "lightstep",
    "meteoblue",
    "middlewares",
    "multimodel",
    "neighbour",
    "neighbours",
    "nextjs",
    "oluane",
    "openapi",
    "opentelemetry",
    "organisation",
    "organisations",
    "prefetch",
    "procfile",
    "remoteaddr",
    "rgba",
    "roboto",
    "sencrop",
    "taiko",
    "timeseries",
    "unmarshall",
    "uuidv",
    "vercel",
    "zstyle",
    "rgba",
    "DATETIME",
    "Luxon",
    "antho",
    "tfstate",
    // Sencrop
    "leafcrop",
    "sigfox",
    "solarcrop",
    "soilcrop",
    "irricrop",
    "chargebee"
  ],
  "workbench.editor.wrapTabs": true
}
