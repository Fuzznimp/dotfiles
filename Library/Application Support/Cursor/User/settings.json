{
  // =========== Core Settings ===========
  "editor.fontFamily": "Hack Nerd Font",
  // "editor.fontFamily": "Terminess Nerd Font",
  "editor.fontWeight": "500",
  // "editor.fontSize": 14,
  "editor.fontLigatures": false,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.wrappingIndent": "same",
  "editor.suggestSelection": "first",
  "editor.accessibilitySupport": "off",
  "editor.dragAndDrop": false,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.cursorStyle": "block",
  "editor.linkedEditing": true,
  "editor.autoClosingBrackets": "never",
  "editor.cursorSurroundingLines": 20,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports.ts": "always",
    "source.fixAll.ts": "always"
  },
  "breadcrumbs.enabled": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "gruvboxMaterial.darkContrast": "hard",
  "presentationMode.zoomLevel": 4,
  "svgPreview.autoOpen": false,
  "vsicons.presets.hideExplorerArrows": true,
  "zenMode.hideLineNumbers": false,
  "explorer.compactFolders": false,
  "window.nativeTabs": true,
  "window.customTitleBarVisibility": "never",
  "window.titleBarStyle": "native",
  "window.title": "${rootName}",
  // =========== Workbench Settings ===========
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Gruvbox Material Dark",
  "workbench.activityBar.location": "top",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.wrapTabs": true,
  "workbench.layoutControl.enabled": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 8,
  "workbench.sideBar.location": "left",
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#8b4513",
    "editorBracketHighlight.foreground2": "#228b22",
    "editorBracketHighlight.foreground3": "#cc7722",
    "sideBar.background": "#181717",
    "activityBar.background": "#ff0000"
  },
  // =========== Window Settings ===========
  "window.zoomLevel": 1,
  "window.commandCenter": false,
  "window.density.editorTabHeight": "default",
  // =========== Files & Search ===========
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "search.exclude": {
    "/venv": true,
    "/bower_components": true,
    "yarn.lock": true,
    "/.next": true,
    "/node_modules": true,
    "/env": true
  },
  "files.watcherExclude": {
    "/venv/": true,
    "/.next": true,
    "/.git/subtree-cache/": true,
    "env-*": true,
    "/node_modules/": true,
    "yarn.lock": true,
    "/.git/objects/": true,
    "/env/": true
  },
  // =========== Language Specific ===========
  "eslint.format.enable": true,
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.columnWidth": 80,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.suggest.paths": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  // =========== Git & GitHub ===========
  "git.enableSmartCommit": true,
  "git.mergeEditor": true,
  "git.autofetch": true,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  // =========== Terminal ===========
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  // =========== Extensions Settings ===========
  // Error Lens
  "errorLens.enabled": false,
  "errorLens.delay": 2000,
  "errorLens.excludeBySource": ["cSpell"],
  // Indent Rainbow
  "indentRainbow.colors": [
    "rgba(16,16,16,0.1)",
    "rgba(16,16,16,0.3)",
    "rgba(16,16,16,0.6)",
    "rgba(16,16,16,0.4)",
    "rgba(16,16,16,0.2)"
  ],
  // Todo Tree
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE"
  ],
  // Background
  "background.editorBackgrounds": [],
  "background.windowBackgrounds": [
    "/Users/fuzznimp/Pictures/vrising.jpg",
    "/Users/fuzznimp/Documents/midgar.jpg"
  ],
  "background.autoInstall": false,
  "background.backgroundOpacity": [0.95, 0.9, 0.9, 0.9],
  "background.useInvertedOpacity": true,
  // cSpell
  "cSpell.language": "en,fr",
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "*.filter",
    "settings.json"
  ],
  "cSpell.userWords": [
    "algo",
    "antho",
    "behaviour",
    "bodyparser",
    "browserslist",
    "DATETIME",
    "deduping",
    "dotfiles",
    "fadeinout",
    "fiability",
    "formik",
    "fuzznimp",
    "gruvbox",
    "lightstep",
    "Luxon",
    "meteoblue",
    "middlewares",
    "multimodel",
    "neighbour",
    "neighbours",
    "nextjs",
    "oluane",
    "openapi",
    "opentelemetry",
    "organisation",
    "organisations",
    "prefetch",
    "procfile",
    "remoteaddr",
    "rgba",
    "rgba",
    "roboto",
    "sencrop",
    "taiko",
    "tfstate",
    "timeseries",
    "unmarshall",
    "uuidv",
    "vercel",
    "zstyle",
    "luxon",
    "colima",
    // Sencrop
    "agro",
    "chargebee",
    "irricrop",
    "leafcrop",
    "sigfox",
    "soilcrop",
    "solarcrop",
    "demeter",
    "geofolia",
    "bali",
    "meteus",
    "actinothermal",
    "decitrait",
    "raincrop"
  ],
  // ========== Diff Editor Settings ==========
  "diffEditor.codeLens": true,
  "diffEditor.ignoreTrimWhitespace": false,
  // =========== Security & Network ===========
  "http.systemCertificates": false,
  "security.workspace.trust.untrustedFiles": "open",
  // ================= Vitest =================
  "vitest.nodeExecutable": "/nix/store/5k3b4l24qray412x35q95y067ll51rv5-nodejs-18.20.4/bin/node",
  // ================== Nvim ==================
  // "editor.lineNumbers": "relative",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // ================ Custom CSS and JS ================
  "vscode_custom_css.imports": [
    "file:///Users/fuzznimp/workspace/dotfiles/Library/Application%20Support/Cursor/User/custom.css"
  ],
  "redhat.telemetry.enabled": false,
  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": false,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "repositories": false,
    "searchAndCompare": false,
    "launchpad": false
  },
  "debug.javascript.autoAttachFilter": "disabled",
  "diffEditor.hideUnchangedRegions.enabled": true
}
